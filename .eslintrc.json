{
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "rules": {
        "function-paren-newline": ["error", "consistent"],
        "space-before-function-paren": ["error", "always"],
        "no-plusplus": 0,
        "comma-dangle": 0,
        "arrow-parens": 0,
        "max-classes-per-file": 0,
        "prefer-object-spread": ["warn"]
    }
}
